<h1 class="hangar my-3">🛫 Planes in the hangar! 🛩</h1>
  <div class="plane-grid">
    <% @airplanes.each do |airplane| %>
      <%= link_to airplane_path(airplane) do %>
          <div class="airplane-card">
            <img src=<%= airplane.image_url %> alt="✈️" class="plane-image">
            <p>Hangar spot number: <%= airplane.id%></p>
            <p>Model: <%= airplane.model %> </p>
            <p>Crew: <%= airplane.crew %></p>
          </div>
      <% end %>
    <% end %>
  </div>

<%= link_to "Add a plane to our hangar!", new_airplane_path,  class:"btn btn-primary m-3"%>


